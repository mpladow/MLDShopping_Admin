
@{
    @model List<MLDShopping_Admin.Models.AccountVM>;
    ViewData["Title"] = "Accounts";
    //Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<header id="header">
    <div class="row">
        <div class="col-12 page-header text-center">
            <h3>
                @ViewData["Title"]
            </h3>
            <p class="small">Set up admin accounts here</p>
        </div>
    </div>
</header>
<section>
    <div class="row mt-3">
        <div class="col-12">
            <div class="row">
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control form-control-sm" placeholder="Type to search..." aria-label="Type to search..." aria-describedby="Type to search...">
                                <div class="input-group-append">
                                    <button class="btn btn-sm btn-outline-secondary" type="button">Button</button>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <button class="btn btn-primary btn-sm">Add New Account</button>
                        </div>
                        <div class="row mt-3">
                            <table class="table table-light table-bordered table-hover table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Account Id</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Permissions</th>
                                        <th>Created At</th>
                                        <th>Deleted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model)
                                    {
                                    <tr>
                                        <th scope="row">@account.AccountId</th>
                                        <td>@account.FirstName</td>
                                        <td>@account.LastName</td>
                                        <td>@account.Permissions</td>
                                        <td>@account.CreatedAt</td>
                                        <td>@account.Deleted</td>
                                        <td>@Html.ActionLink("Edit", "Edit", "Account", new { id = account.AccountId})</td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

